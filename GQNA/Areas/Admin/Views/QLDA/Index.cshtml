@model IEnumerable<GQNA.Models.Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}


<link href="~/Areas/Admin/Content/plugins/select2/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/40.1.0/classic/ckeditor.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<!-- Thư viện jQuery UI -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>




<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Danh sách admin</li>
                        <li class="breadcrumb-item active">Thêm mới admin</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->

                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thêm mới dự án</h3>
                        </div>

                        <style>
                            #editor {
                                width: 100%; /* Đặt độ rộng theo nhu cầu của bạn */
                                max-width: 800px; /* Đặt độ rộng tối đa nếu cần */
                                margin: 0 auto; /* Canh giữa nếu cần */
                            }
                        </style>

                        <p>
                            @Html.ActionLink("Create New", "Create")
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.name_project)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.img_project)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.project_time_start)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.project_time_end)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.id_DT)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.project_amount)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name_project)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.img_project)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.project_time_start)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.project_time_end)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.id_DT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.project_amount)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.id_project }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.id_project }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.id_project })
                                    </td>
                                </tr>
                            }

                        </table>
</div>
</div>
          </div>
        </section>
    </div>