@model GQNA.Models.tbl_DT
@{
    ViewBag.Title = "chitiet";
    Layout = "~/Views/Shared/_Layout_DT.cshtml";
}

@{
    var cssVersion = DateTime.Now.Ticks;
}
<main>

    <div class="wrapper-box p-relative">
        <div class="hero-item hero-height p-relative">
            <div class="tpslider__thumb">
                <img src="~/Content/images/ImgDT/@Model.background_DT" alt="">
            </div>
        </div>
        <div class="breadcrumb-area pt-265 pb-265">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="breadcrumb__content text-center">
                            <h1 class="breadcrumb__title"></h1>
                            <div class="breadcrumb__list">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="service-details-area pt-60">
        <div class="container">
            <div class="row">
                <div class="col-xl-6">
                    <div class="service-section mt-30  wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".3s">

                        <h3 class="service-title">@Model.name_DT</h3>

                        <!-- portfolio details area start -->
                        <div class="portfolio-details-area pt-70">
                            <div class="container" style="padding-bottom:50px;">
                                <div class="col-xl-14 wow fadeInRight" data-wow-duration="1s" data-wow-delay=".5s">

                                    <div class="row">
                                        <div class="col-3">
                                            <div class="portfolio-details-wrapper">
                                                <span class="portfolio-details-name">32</span>
                                                <p>dự án đã được gây quỹ</p>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="portfolio-details-wrapper portfolio-margin">
                                                <span class="portfolio-details-name">2+ tỷ</span>
                                                <p>đồng được quyên góp</p>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="portfolio-details-wrapper portfolio-margin">
                                                <span class="portfolio-details-name">6+ triệu</span>
                                                <p>lượt tham gia quyên góp</p>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="portfolio-details-wrapper portfolio-margin">
                                                <span class="portfolio-details-name">Date:</span>
                                                <p>Ocober 3, 2021</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- portfolio details area end -->


                        <div class="service-btn  wow fadeInLeft" data-wow-duration="1s" data-wow-delay=".5s">
                            <a class="tp-btn tp-btn-shine-effect" href="donation-details.html">Quyên Góp</a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6  wow fadeInRight" data-wow-duration="1s" data-wow-delay=".5s">
                    <div class="service-text mt-30">
                        @Html.Raw(Model.des_DT)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- service details area end -->
    <!-- service thumb video area start-->
    <div class="service-thumb-video">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="service-img p-relative  wow fadeInUp" data-wow-duration="1s" data-wow-delay=".5s">
                        <img src="~/Content/images/ImgDT/@Model.background_DT" alt="">
                        <div class="service-play-btn">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- service thumb area end-->
    <!-- card area start -->
    <section class="card-area card-area-2 service-details pt-125 pb-130">
        <div class="container">
            <div class="row">
                <div class="col-xl-12 col-lg-10 col-md-8">
                    <div class="section-title-wrapper">
                        <span class="section-sub-title has-before has-after text-center">
                            Chương trình quyên góp
                        </span>
                        <h3 class="section-title text-center">
                            của Quỹ Nâng Bước Tuổi Thơ
                        </h3>
                    </div>
                </div>
            </div>
            <div class="causes-active slick-20">
                @foreach (var project in Model.Projects)
                {
                    <div class="causes-item">
                        <div class="tpcard__wrapper tpcard__wrappr-2 white-bg">
                            <div class="tpcard__img grayscale">
                                <a href="donation-listing.html"><img src="@project.img_project" alt=""></a>
                            </div>
                            <div class="tpcard__content">
                                <h4 class="tpcard__title">
                                    <a href="donation-listing.html">Help Children Rise out of Poverty of this child</a>
                                </h4>
                                <div class="tpcard__progresss">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-label="Example with label"
                                             style="width: 80%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                            <span>80%</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="tpcard__bottom d-flex justify-content-between">
                                    <div class="tpcard__details">
                                        <span class="subtitle">our goal</span> <br>
                                        <span class="sale">$34.0000</span>
                                    </div>
                                    <div class="tpcard__details">
                                        <span class="subtitle">Raised</span> <br>
                                        <span class="sale">$11.9098</span>
                                    </div>
                                    <div class="tpcard__details">
                                        <span class="subtitle">to go</span> <br>
                                        <span class="sale">$56,000</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                </div>
            <div class="row wow fadeInUp" data-wow-duration="1s" data-wow-delay=".5s">
                <div class="tpcard-btn d-flex justify-content-center mt-55">
                    <a class="tp-btn tp-btn-shine-effect" href="our-portfolio.html">All Campains</a>
                </div>
            </div>
        </div>
    </section>
    <!-- card area end -->

</main>

<script src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js'></script>
<script src="~/Content/js/slider.js?v=@cssVersion"></script>

